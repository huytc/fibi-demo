{{> header }}

<link rel="stylesheet" href="//cdn.datatables.net/1.10.21/css/jquery.dataTables.min.css">
<script src="//cdn.datatables.net/1.10.21/js/jquery.dataTables.min.js"></script>

<div class="ui container">
  {{#if error}}
  <div class="ui negative message">
    {{error}}. Trở lại <a href="/forms">Form của tôi</a>.
  </div>
  {{else}}
  <div class="ui breadcrumb">
    <a class="section" href="/forms">Form của tôi</a>
    <i class="right angle icon divider"></i>
    <a class="active section" href="/forms/{{id}}">
      {{#if name}}
      {{name}}
      {{else}}
      Lỗi
      {{/if}}
    </a>
  </div>
  <div class="ui divider hidden"></div>
  <div class="ui grid">
    <div class="three column row">
      <div class="three wide column">
        <div id="qr"></div>
      </div>
      <div class="nine wide column">
        <h1 class="ui header">{{name}}</h1>
        <a href="http://{{url}}" target="_blank" rel="noopener noreferrer">{{url}}</a>
        <div class="ui divider hidden"></div>
        <strong>Lượt trả lời:&nbsp;</strong>{{numAnswers}}
      </div>
      <div class="four wide right aligned column">
        <a href="/forms/{{id}}/edit">
          <button class="ui primary button">Sửa</button>
        </a>
        <button class="ui negative button" onclick="deleteForm()">Xóa</button>
      </div>
    </div>
  </div>
  <div class="ui divider"></div>
  <div id="answers-container" style="display:none;">
    <h2 class="ui header">Câu trả lời</h2>
    <table id="answers-table">
      <thead>
        <tr>
          {{#each headers}}
          <th>
            {{this.title}}
          </th>
          {{/each}}
        </tr>
      </thead>
    </table>
    <canvas id="myChart" width="400" height="400"></canvas>
  </div>
  {{/if}}
</div>

<script>
  $("#qr").qrcode({ width: 128, height: 128, text: "{{url}}" });

  function deleteForm() {
    $.ajax({
      url: "/forms/{{id}}",
      method: "DELETE",
      success: function (data) {
        document.location.href = "/forms"
      }
    });
  }

  {{#ifne numAnswers 0 }}
  $(document).ready(function () {
    $.fn.dataTable.ext.errMode = 'none';
    $('#answers-container').show();
    $('#answers-table').DataTable({
      data: {{{ answers }}},
    columns: [
      {{#each headers}}
      { data: "{{this.name}}" },
      {{/each}}
    ]
    });
  });

  var ctx = document.getElementById('myChart').getContext('2d');
  var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
      labels: ['Red', 'Blue', 'Yellow', 'Green', 'Purple', 'Orange'],
      datasets: [{
        label: '# of Votes',
        data: [12, 19, 3, 5, 2, 3],
        backgroundColor: [
          'rgba(255, 99, 132, 0.2)',
          'rgba(54, 162, 235, 0.2)',
          'rgba(255, 206, 86, 0.2)',
          'rgba(75, 192, 192, 0.2)',
          'rgba(153, 102, 255, 0.2)',
          'rgba(255, 159, 64, 0.2)'
        ],
        borderColor: [
          'rgba(255, 99, 132, 1)',
          'rgba(54, 162, 235, 1)',
          'rgba(255, 206, 86, 1)',
          'rgba(75, 192, 192, 1)',
          'rgba(153, 102, 255, 1)',
          'rgba(255, 159, 64, 1)'
        ],
        borderWidth: 1
      }]
    },
    options: {
      scales: {
        yAxes: [{
          ticks: {
            beginAtZero: true
          }
        }]
      }
    }
  });
  {{/ifne}}
</script>
